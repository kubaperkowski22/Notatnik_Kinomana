<adonisControls:AdonisWindow x:Class="Notatnik_Kinomana_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notatnik_Kinomana_v2"
        xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
        xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:vm="clr-namespace:Notatnik_Kinomana_v2.ViewModels"  
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowVM}"
        TitleBarBackground="#333333"
        TitleBarForeground="White"
        Background="#F0F0F0"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem Header="Plik">
                <MenuItem Header="Otwórz">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="FolderOpen"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Zapisz">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="Save"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Eksportuj do Excela">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="FolderOpen"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Statystyki">
                <MenuItem Header="Otwórz statystyki">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="AreaChart"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Zapisz statystyki">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="Download"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <DockPanel>
                <TabControl>
                    <TabItem Header="Dodaj film"/>
                    <TabItem Header="Zaplanuj premierę"/>
                    <TabItem Header="Dodane filmy"/>
                    <TabItem Header="Dodaj film"/>
                </TabControl>
            </DockPanel>



        </Grid>
    </Grid>
</adonisControls:AdonisWindow>
